.row: .col-xs-6.col-xs-offset-3.col-md-4.col-md-offset-4
  .well
    form(name="loginForm" action="")#loginForm.form-horizontal
      fieldset
        legend {{configModel.headerText}}
      .control-group.form-group(ng-class="{has-error: loginForm.$error.email, has-feedback: loginForm.errors.email}")
        label Username
        input(name="email", type="email", ng-model="loginModel.email", placeholder="Email Address", required).form-control
        span(class="help-block error", ng-show="loginForm.$error.email") Bad username help message
      .control-group.form-group(ng-class="{has-error: loginForm.$error.password, has-feedback: loginForm.errors.password}")
        label Password
        input(name="password", type="password", ng-model="loginModel.password", placeholder="Password", required).form-control
        span(class="help-block error", ng-show="loginForm.$error.password") Bad password help message
    button(name="signin", id="signin", ng-disabled="loginForm.$invalid", ng-click="doLogin()").btn.btn-success.btn-small.pull-right Log In
    br
.row: .col-xs-6.col-xs-offset-3.col-md-4.col-md-offset-4
  a.pull-left(ng-show="configModel.hasRegistration", href="/newUser") Sign up!
  a.pull-right(href="/forgotPassword") Forgot password?
