div
  .row
    .col-xs-offset-1.col-xs-6
      h3 Messages
      .overflowable
        p(ng-repeat='message in messageModels') : 
    .col-xs-4
      h3 Users
      .overflowable: .list-group
        a.list-group-item(ng-repeat='user in userModels', ng-class="getDecorationClass(user)", ng-mouseenter="user.hasMouse = true", ng-mouseleave="user.hasMouse=false", ng-click="selectUser(user)") {{user.displayName}} 
          span.glyphicon.glyphicon-flag.pull-right(ng-if="user.hasMyTeam(sessionModel.teamCurie)")
          span.glyphicon.glyphicon-circle.pull-right(ng-if="user.hasOtherTeam(sessionModel.teamCurie)")
          span.glyphicon.glyphicon-user.pull-right(ng-if="user.isFreeAgent()")
          span.glyphicon.glyphicon-book.pull-right(ng-if="user.isTeacher")
  br
  form.form-horizontal
    .form-group
      label.control-label.col-xs-offset-1.col-xs-1(for="newMessageText") Message: 
      .input-group.col-xs-5
        input#newMessageText.form-control(size='60', ng-model='newMessageModel.content')
        span.input-group-btn
          button.btn.btn-primary.btn-sm(type="button", ng-click="sendMessage()") Send
